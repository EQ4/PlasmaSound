<?xml version="1.0" encoding="UTF-8"?>
<manifest package="com.rj.processing.plasmasoundhd" 
    android:versionCode="180" 
    android:versionName="2.3.0" 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:installLocation="preferExternal">
  <uses-sdk android:targetSdkVersion="14" android:minSdkVersion="8"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.INTERNET"></uses-permission>
  	<supports-screens android:smallScreens="false"
	                  android:normalScreens="false"
	                  android:largeScreens="true"
	                  android:xlargeScreens="true"
	                  android:anyDensity="true"/> 
   <application android:label="@string/app_name" android:icon="@drawable/icon" android:hardwareAccelerated="true">
  
    <activity android:name="com.rj.processing.plasmasoundhd.PDActivity"
    		  android:theme="@style/PSNDStyle" android:screenOrientation="landscape"
    		  android:configChanges="orientation|keyboard|navigation|touchscreen|keyboardHidden|uiMode|screenLayout|screenSize|fontScale"
    		  android:launchMode="singleTop">
    		
    		<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DESK_DOCK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    <activity
        android:name="com.rj.processing.plasmasound.PlasmaThereminEffectsSettings"
        android:configChanges="orientation"
        android:screenOrientation="landscape" >
    </activity>
    <activity
        android:name="com.rj.processing.plasmasound.PlasmaThereminAudioSettings"
        android:configChanges="orientation"
        android:screenOrientation="landscape" >
    </activity>
    <activity
        android:name="com.rj.processing.plasmasound.PlasmaThereminSequencerSettings"
        android:configChanges="orientation"
        android:screenOrientation="landscape" >
    </activity>
</application>
  
</manifest>
